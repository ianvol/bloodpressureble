<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="470dp" />

<androidx.cardview.widget.CardView
    android:id="@+id/card_systolic"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardBackgroundColor="#F3F4F6"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toTopOf="@id/guideline_top"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/box_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/box_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/box_last8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 8"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/box_one_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E0E0E0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Week"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/text_average_systolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Systolic: 0"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/box_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_average_diastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Diastolic: 0"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_average_systolic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

    <TableLayout
        android:id="@+id/table_readings"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintVertical_bias="0.444">

        <TableRow>

            <TextView
                android:id="@+id/time_header"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/systolic_header"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Systolic"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diastolic_header"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Diastolic"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pulse_header"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Pulse"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_1"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 1" />

            <TextView
                android:id="@+id/systolic_1"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="120" />

            <TextView
                android:id="@+id/diastolic_1"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="80" />

            <TextView
                android:id="@+id/pulse_1"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="70" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_2"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 2" />

            <TextView
                android:id="@+id/systolic_2"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="125" />

            <TextView
                android:id="@+id/diastolic_2"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="85" />

            <TextView
                android:id="@+id/pulse_2"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="72" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_3"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 3" />

            <TextView
                android:id="@+id/systolic_3"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="130" />

            <TextView
                android:id="@+id/diastolic_3"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="90" />

            <TextView
                android:id="@+id/pulse_3"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="75" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_4"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 4" />

            <TextView
                android:id="@+id/systolic_4"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="135" />

            <TextView
                android:id="@+id/diastolic_4"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="95" />

            <TextView
                android:id="@+id/pulse_4"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="78" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_5"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 5" />

            <TextView
                android:id="@+id/systolic_5"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="140" />

            <TextView
                android:id="@+id/diastolic_5"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="100" />

            <TextView
                android:id="@+id/pulse_5"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="80" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_6"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 6" />

            <TextView
                android:id="@+id/systolic_6"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="145" />

            <TextView
                android:id="@+id/diastolic_6"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="105" />

            <TextView
                android:id="@+id/pulse_6"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="82" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_7"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 7" />

            <TextView
                android:id="@+id/systolic_7"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="150" />

            <TextView
                android:id="@+id/diastolic_7"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="110" />

            <TextView
                android:id="@+id/pulse_7"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="85" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/time_8"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Time 8" />

            <TextView
                android:id="@+id/systolic_8"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="155" />

            <TextView
                android:id="@+id/diastolic_8"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="115" />

            <TextView
                android:id="@+id/pulse_8"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="88" />
        </TableRow>

    </TableLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
